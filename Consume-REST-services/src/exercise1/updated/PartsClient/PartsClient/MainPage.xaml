<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PartsClient"
             x:Class="PartsClient.MainPage"
             Title="Parts"
             BackgroundColor="{DynamicResource SecondaryColor}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add New" Clicked="OnAddNewPart" />
        <ToolbarItem Text="Refresh" Clicked="OnRefresh" />
    </ContentPage.ToolbarItems>

    <ListView ItemsSource="{Binding}"
              ItemTapped="OnEditPart">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding PartName}" Detail="{Binding PartType}">
                    <TextCell.ContextActions>
                        <MenuItem Clicked="OnDeletePart"
                                  CommandParameter="{Binding}"
                                  Text="Delete" IsDestructive="True" />
                    </TextCell.ContextActions>
                </TextCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
