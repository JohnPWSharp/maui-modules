<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:pages="clr-namespace:TipCalculator"
       x:Class="TipCalculator.AppShell">
    <TabBar>
        <Tab Title="Tip Calculator">
            <ShellContent Title="Standard" 
                      Route="standard"
                      ContentTemplate="{DataTemplate pages:StandardTipPage}"/>
            <ShellContent Title="Custom" 
                      Route="custom"
                      ContentTemplate="{DataTemplate pages:CustomTipPage}"/>
        </Tab>
    </TabBar>
</Shell>